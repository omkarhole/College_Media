# Use MongoDB Atlas connection string in production
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/college_media?retryWrites=true&w=majority

# For local development, you can use this, but make sure MongoDB is installed and running
MONGODB_URI=mongodb://localhost:27017/college_media
JWT_SECRET=college_media_secret_key_for_development
PORT=5000
RESEND_API_KEY=your_resend_api_key_here
FRONTEND_URL=http://localhost:5173

# Rate Limiting & Redis
ENABLE_REDIS=false
REDIS_URL=redis://localhost:6379
RATE_LIMIT_WHITELIST=127.0.0.1,::1

# Database Connection Pool
DB_POOL_MAX_SIZE=10
DB_POOL_MIN_SIZE=2

# Query Monitoring
ENABLE_QUERY_LOGGING=true
SLOW_QUERY_THRESHOLD=100

# Cloudinary Configuration (for production image storage)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret